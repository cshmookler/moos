pkgname='moos-ansies'
pkgver=20241114
pkgrel=1
pkgdesc='A header-only C++ library for using ANSI escape sequences. Supported on Windows and Unix-like operating systems.'
arch=('any')
license=('Zlib')
groups=('moos')
options=('!debug')
makedepends=(
    'git'
    'meson'
)
source=('git+https://github.com/cshmookler/ansies.git')
sha256sums=('SKIP')
_repo='ansies'

pkgver() {
    cd "$_repo"
    git log -1 --date=format:"%Y%m%d" --format="%ad"
}

build() {
    cd "$_repo"
    arch-meson . build 
    meson compile -C build 
}

# check() {
#     # Testing fails if any of the status fields are invalid.
#     cd "$_repo"
#     meson test -C build 
# }

package() {
    cd "$_repo"
    meson install -C build --destdir "$pkgdir"
    install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -Dm644 "README.md" "$pkgdir/usr/share/doc/$pkgname/README.md"
}
