pkgname='moos-env'
pkgver=20260109
pkgrel=1
pkgdesc='Dot files that configure the shell.'
arch=('any')
options=('!debug')
depends=(
    'bash'                   # A basic shell
    'bash-completion'        # Auto-completion for bash
)
source=(
    'rc_moos.sh'
    '.bashrc'
    '.bash_profile'
)
sha256sums=(
    '97359b569a29c3f6aab278087f058fc6950d4f0e336c81e54f41eecf7a6304e6'
    '77f22cc704998f9d51ded670037c0f16611addf321025a4c5749d69771506f03'
    '59eefe5f9ec86a3b6dabc0aa7f0d789ff78f382fcbb9b87a9f15a133c9ddff5c'
)

pkgver() {
    date +%Y%m%d
}

package() {
    _skel="$pkgdir/etc/moos-skel"
    install -Dm644 "rc_moos.sh" "$_skel/.bashrc.d/moos.sh"
    install -Dm644 ".bashrc" "$_skel/.bashrc"
    install -Dm644 ".bash_profile" "$_skel/.bash_profile"
}
