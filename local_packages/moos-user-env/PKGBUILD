pkgname='moos-user-env'
pkgver=20240915
pkgrel=1
pkgdesc='Default user environment for MOOS.'
arch=('any')
groups=('moos')
options=('!debug')
depends=(
    'xorg-xinit'
    'xorg-xset'
    'physlock'
    'xss-lock'
    'qt5-styleplugins'
    'qt6gtk2'
    'breeze-gtk'
    'moos-dwm'
    'moos-fonts'
    'moos-slock'
    'moos-status-bar'
)
source=(
    '.bash_profile'
    '.bashrc'
    '.xinitrc'
    '.gtkrc-2.0'
    'gtk3-settings.ini'
    'gtk4-settings.ini'
    'firefox-user.js'
    'tor-browser-user.js'
)
sha256sums=(
    '1469da7b27766ad4d07eb202de0142609a72763f5e3088d67893334d68725984'
    'b2210635dbf22c11dc6e4b644130314b8619c3a895034baa9b4a92f12830881e'
    '1e87c4c5d74fe53108c628222a7a471829eebccbcfcdf74d91746bc815b40958'
    '18fc70fc443362ec32257804ceb561a3ae3eaff9a39e01ee79c9f115303c3001'
    'b845d6d8a1b817f323a7e884e9973c4a50fd1aeffd2e88d5b014b599920be956'
    'b845d6d8a1b817f323a7e884e9973c4a50fd1aeffd2e88d5b014b599920be956'
    'f61cf6ce1e4a232c285b32a0aaa6d22e6da4341aa2337c247da26fb971e7ad65'
    'ddbae0abc7116ec9028272b1dbf4b05893d2d80a1903560daf371a434c99c23a'
)

package() {
    ENV_DIR="$pkgdir/etc/user_env"
    install -Dm644 ".bash_profile" "$ENV_DIR/.bash_profile"
    install -Dm644 ".bashrc" "$ENV_DIR/.bashrc"
    install -Dm644 ".xinitrc" "$ENV_DIR/.xinitrc"
    install -Dm644 ".gtkrc-2.0" "$ENV_DIR/.gtkrc-2.0"
    install -Dm644 "gtk3-settings.ini" "$ENV_DIR/.config/gtk-3.0/settings.ini"
    install -Dm644 "gtk4-settings.ini" "$ENV_DIR/.config/gtk-4.0/settings.ini"
    install -Dm644 "firefox-user.js" "$ENV_DIR/.mozilla/firefox/user.js"
    install -Dm644 "tor-browser-user.js" "$ENV_DIR/.local/share/torbrowser/tbb/x86_64/tor-browser/Browser/TorBrowser/Data/Browser/profile.default/user.js"
}
