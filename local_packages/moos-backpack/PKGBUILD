pkgname='moos-backpack'
pkgver=20251216
pkgrel=1
pkgdesc='Manage encrypted backups.'
arch=('any')
options=('!debug')
makedepends=(
    'git'
)
depends=(
    'python'
    'python-cryptography'
)
source=(
    'git+https://immer.duckdns.org/git/cshmookler/backpack.git'
)
sha256sums=(
    'SKIP'
)
_repo='backpack'

pkgver() {
    cd "$_repo"
    git log -1 --date=format:"%Y%m%d" --format="%ad"
}

package() {
    install -Dm755 "backpack/backpack.py" "$pkgdir/usr/bin/backpack"
}
